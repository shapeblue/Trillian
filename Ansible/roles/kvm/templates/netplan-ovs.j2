network:
    ethernets:
        eth0:
            dhcp4: no
        eth1:
            dhcp4: no
    bridges:
        cloudbr0:
            dhcp4: yes
            interfaces:
                - eth0
            macaddress: {{ ansible_eth0.macaddress }}
            openvswitch:
              other-config:
                hwaddr: {{ ansible_eth0.macaddress }}

        cloudbr1:
            dhcp4: no
            interfaces:
                - eth1
            addresses: ["cloudbr1.ipaddress"]
            macaddress: {{ ansible_eth1.macaddress }}
            openvswitch: 
              other-config:
                hwaddr: {{ ansible_eth1.macaddress }}

        cloud0:
            dhcp4: no
            addresses: ["169.254.0.1/16"]
            openvswitch: {}

    version: 2
