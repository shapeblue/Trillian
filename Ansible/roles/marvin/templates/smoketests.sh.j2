        cloudmonkey delete network id=$netid || true
      done
    echo "wait ${sleepduration}s to give Networks some time to destroy"
    sleep $sleepduration
    count_networks
    if [ $NUM_GCNETWORKS -gt 0 ]; then
      retries=$((retries)-1)
    else
      retries=0
    fi
    done
