{
	"zones": [{
		"name": "{{ env_name_clean }}",
		"guestcidraddress": "{{ env_zone_guestcidr }}",
		"dns1": "{{ env_zone_dns1 }}",
		"physical_networks": [{
			"broadcastdomainrange": "Zone",
			"name": "Trillian-Guest-Public",
			"traffictypes": [{
				"typ": "Guest"
			}, {
				"typ": "Public"
			}],
			"providers": [{
				"broadcastdomainrange": "ZONE",
				"name": "VirtualRouter"
			}, {
				"broadcastdomainrange": "ZONE",
				"name": "VpcVirtualRouter"
			}, {
				"broadcastdomainrange": "ZONE",
				"name": "InternalLbVm"
			}],
			"isolationmethods": [
				"VLAN"
			]
		},{
			"broadcastdomainrange": "Zone",
			"name": "Trillian-Mgmt",
			"traffictypes": [{
				"typ": "Management"
			},],
			"providers": [{
				"broadcastdomainrange": "ZONE",
				"name": "VirtualRouter"
			}, {
				"broadcastdomainrange": "ZONE",
				"name": "VpcVirtualRouter"
			}, {
				"broadcastdomainrange": "ZONE",
				"name": "InternalLbVm"
			}],
			"isolationmethods": [
				"VLAN"
			]
		}],
{% if env_hypervisor == "vmware" %}
		"vmwaredc": {
			"username": "{{ vmware_vcsa_user }}",
			"vcenter": "{{ hostvars(groups[vc_hosts][0]).ssh_hostname }}",
			"password": "{{ vmware_vcsa_pass }}",
			"name": "{{ vmware_datacenter_name }}"
		},
{% endif %}
		"ipranges": [{
			"startip": "$PUBLIC_STARTIP",
			"endip": "$PUBLIC_ENDIP",
			"netmask": "$PUBLIC_MASK",
			"vlan": "$PUBLIC_VLAN",
			"gateway": "$PUBLIC_GATEWAY"
		}],
		"networktype": "Advanced",
		"pods": [{
			"endip": "$POD1_RES_ENDIP",
			"name": "$POD1_NAME",
			"startip": "$POD1_RES_STARTIP",
			"netmask": "$POD1_MASK",
			"clusters": [{
					"clustername": "{{ env_zone_clustername }}",
					"hypervisor": "{{ env_hypervisor }}",
{% if env_hv == "kvm" %}
					"hosts": [
{% for host in groups['kvm_hosts'] %}            {
						"username": "root",
						"url": "http://{{ hostvars[host]['ansible_ssh_host'] }}",
						"password": "{{ hostvars[host]['ansible_ssh_pass'] }}"
					}{% if not loop.last %},{% endif %}{% endfor %}
					],
					"clustertype": "CloudManaged",
{% elif env_hv == "xenserver" %}
					"hosts": [
{% for host in groups['xenserver_hosts'] %}            {
						"username": "root",
						"url": "http://{{ hostvars[host]['ansible_ssh_host'] }}",
						"password": "{{ hostvars[host]['ansible_ssh_pass'] }}"
					}{% if not loop.last %},{% endif %}{% endfor %}
					],
					"clustertype": "CloudManaged",
{% elif env_hv == "vmware" %}
					"hosts": [{
{% for host in groups['vmware_hosts'] %}            {
						"username": "root",
						"url": "http://{{ hostvars[host]['ansible_ssh_host'] }}",
						"password": "{{ hostvars[host]['ansible_ssh_pass'] }}"
					}{% if not loop.last %},{% endif %}{% endfor %}
					],
					"clustertype": "CloudManaged",
{% endif %}
					"primaryStorages": [{
{% for pripool in env_pripools %}
						"url": "{{ env_priprot }}://{{ env_prihost }}{{ env_pripath }}{{ env_name_clean }}/{{ pripool }}/",
						"name": "{{ pripool }}"
{% endfor %}
					}]
				}

			],
			"gateway": "$POD1_GATEWAY"
		}],
		"internaldns1": "{{ env_zone_intdns1 }}",
		"secondaryStorages": [{
{% for secpool in env_secpools %}
			"url": "nfs://{{ env_sechost }}{{ env_secpath }}{{ env_name_clean }}/{{ secpool }}/",
			"name": "{{ secpool }}"
			"provider": "NFS"
{% endfor %}
		}]
	}],
	"dbSvr": {
{% if db | int == 0 %}		"dbSvr": "{{ hostvars(groups[primary_cs_manager][0]).ssh_hostname }}",{% endif %}
{% if db | int > 0 %}		"dbSvr": "{{ hostvars(groups[mysql_master_host][0]).ssh_hostname }}",{% endif %}
		"passwd": "{{ mysql_cloud_password }}",
		"db": "cloud",
		"port": 3306,
		"user": "cloud"
	},
	"logger": {
		"LogFolderPath": "/var/log"
	},
