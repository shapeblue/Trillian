		"mgtSvrIp": "{{ hostvars(groups[primary_cs_manager][0]).ssh_hostname }}",
		"port": 8096,
		"user": "{{ mgmtsrv_username }}",
		"passwd": "{{ mgmtsrv_password }}",
		"hypervisor": "{{ env_hypervisor }}"
	}]
}
